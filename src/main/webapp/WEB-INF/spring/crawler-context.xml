<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <beans:bean id="crawlerConnector" class="pl.edu.agh.ecm.crawler.CrawlerConnector" >

        <constructor-arg name="remoteManagerAddress" value="127.0.0.1" />
        <constructor-arg name="remoteNodeName" value="remote_node" />
        <constructor-arg name="remoteManagerPort" value="4001" />
    </beans:bean>

</beans>